.book_container {
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #F8F8F8;
  padding-bottom: 40rpx;
}
.book_container .book_title_wrapper {
  margin-bottom: 44rpx;
}
.book_container .book_title_wrapper text {
  font-style: normal;
  font-weight: 500;
  font-size: 48rpx;
  line-height: 62rpx;
}
.book_container .book_list_wrapper .book_list_item {
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
}
.book_container .book_list_wrapper .book_list_item .book_list_cover_wrapper image {
  width: 240rpx;
  height: 340rpx;
  border-radius: 12rpx;
  border-bottom-right-radius: 0;
}
.book_container .book_list_wrapper .book_list_item .book_list_detail_wrapper {
  height: 100%;
  width: 100%;
  position: relative;
}
.book_container .book_list_wrapper .book_list_item .book_list_detail_wrapper .book_list_block {
  height: 60rpx;
  width: 100%;
}
.book_container .book_list_wrapper .book_list_item .book_list_detail_wrapper .book_list_detail {
  height: 280rpx;
  padding-left: 40rpx;
  background: #FFFFFF;
  box-shadow: 0px 10px 20px rgba(1, 74, 143, 0.1);
  border-radius: 8px;
  border-bottom-left-radius: 0;
  border-top-left-radius: 0;
}
.book_container .book_list_wrapper .book_list_item .book_list_detail_wrapper .book_list_detail .book_list_title {
  font-style: normal;
  font-weight: 500;
  font-size: 38rpx;
  line-height: 40rpx;
  color: #333333;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.book_container .book_list_wrapper .book_list_item .book_list_detail_wrapper .book_list_detail .book_list_other {
  font-style: normal;
  font-weight: 400;
  font-size: 26rpx;
  line-height: 34rpx;
  text-align: justify;
  color: #666666;
  padding-top: 5rpx;
}