.index_container {
  background-color: #F8F8F8;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.index_container .index_search_wrapper {
  flex-direction: row;
  display: flex;
}
.index_container .index_search_wrapper .index_input_wrapper {
  margin: 12rpx;
  width: 85%;
}
.index_container .index_search_wrapper .index_input_wrapper .index_input {
  border-radius: 16rpx;
  background: #fff;
  height: 75rpx;
}
.index_container .index_search_wrapper .index_avatar_wrapper {
  width: 15%;
  margin: 8rpx;
  padding-left: 20rpx;
}
.index_container .index_search_wrapper .index_avatar_wrapper image {
  border-radius: 50rpx;
  height: 90rpx;
  width: 90rpx;
}

.index_container .index_swipper_wrapper {
  margin-top: 30rpx;
  height: 380rpx;
  width: 100%;
  margin-bottom: 50rpx;
}

.index_container .index_notice_wrapper .index_notice_bar {
  position: relative;
}
.index_container .index_notice_wrapper .index_notice_bar .index_notice_bar_title {
  position: relative;
  width: 96rpx;
  height: 62rpx;
  font-weight: 400;
  font-size: 24px;
  line-height: 30.59px;
  color: #333333;
  font-family: "Abel";
  font-style: normal;
}
.index_container .index_notice_wrapper .index_notice_bar .index_notice_bar_icon {
  width: 16rpx;
  height: 24rpx;
  position: absolute;
  top: 12rpx;
  right: 20rpx;
}
.index_container .index_notice_wrapper .index_notice_preview {
  margin-bottom: 70rpx;
}
.index_container .index_notice_wrapper .index_notice_preview .index_notice_preview_item {
  height: 128rpx;
  border-radius: 24rpx;
  background-color: #fff;
  margin-bottom: 12rpx;
}
.index_container .index_notice_wrapper .index_notice_preview .index_notice_preview_item:first-child {
  margin-top: 20rpx;
}
.index_container .index_notice_wrapper .index_notice_preview .index_notice_preview_item:last-child {
  margin-bottom: 20rpx;
}

.index_new_wrapper {
  margin-top: 100rpx;
}
.index_new_wrapper .index_new_bar {
  position: relative;
}
.index_new_wrapper .index_new_bar .index_new_bar_title {
  position: relative;
  width: 96rpx;
  height: 62rpx;
  font-weight: 400;
  font-size: 24px;
  line-height: 30.59px;
  color: #333333;
  font-family: "Abel";
  font-style: normal;
}
.index_new_wrapper .index_new_bar .index_new_bar_icon {
  width: 16rpx;
  height: 24rpx;
  position: absolute;
  top: 12rpx;
  right: 20rpx;
}
.index_new_wrapper .index_new_preview .index_new_preview_item {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  position: relative;
  margin-bottom: 40rpx;
}
.index_new_wrapper .index_new_preview .index_new_preview_item:first-child {
  margin-top: 40rpx;
}
.index_new_wrapper .index_new_preview .index_new_preview_item image {
  width: 140rpx;
  height: 200rpx;
  border-radius: 16rpx;
}
.index_new_wrapper .index_new_preview .index_new_preview_item .index_new_msg_wrapper {
  display: block;
  margin-left: 40rpx;
  position: relative;
  width: 100%;
}
.index_new_wrapper .index_new_preview .index_new_preview_item .index_new_msg_wrapper view {
  margin-bottom: 14rpx;
  width: 100%;
}

.index_shop_wrapper {
  margin-top: 80rpx;
}
.index_shop_wrapper .index_shop_bar {
  position: relative;
}
.index_shop_wrapper .index_shop_bar .index_shop_bar_title {
  position: relative;
  width: 96rpx;
  height: 62rpx;
  font-weight: 400;
  font-size: 24px;
  line-height: 30.59px;
  color: #333333;
  font-family: "Abel";
  font-style: normal;
}
.index_shop_wrapper .index_shop_bar .index_shop_bar_icon {
  width: 16rpx;
  height: 24rpx;
  position: absolute;
  top: 12rpx;
  right: 20rpx;
}
.index_shop_wrapper .index_shop_preview_item {
  margin-bottom: 40rpx;
}
.index_shop_wrapper .index_shop_preview_item image {
  height: 320rpx;
  width: 100%;
  border-radius: 16rpx;
}
.index_shop_wrapper .index_shop_preview_item:first-child {
  margin-top: 40rpx;
}
.index_shop_wrapper .index_shop_preview_item .shop_msg_wrapper .shop_msg_title,
.index_shop_wrapper .index_shop_preview_item .shop_msg_wrapper .shop_msg_price {
  font-family: "Abel";
  font-style: normal;
  font-weight: 400;
  line-height: 40rpx;
  text-align: justify;
  margin-left: 10rpx;
}
.index_shop_wrapper .index_shop_preview_item .shop_msg_wrapper .shop_msg_title {
  font-size: 32rpx;
  color: #333333;
}
.index_shop_wrapper .index_shop_preview_item .shop_msg_wrapper .shop_msg_price {
  font-size: 40rpx;
  color: #f30430;
}
