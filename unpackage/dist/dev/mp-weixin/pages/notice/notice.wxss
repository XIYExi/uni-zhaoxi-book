.notice_container {
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #F8F8F8;
  padding-bottom: 40rpx;
}
.notice_container .notice_title_wrapper {
  margin-bottom: 44rpx;
}
.notice_container .notice_title_wrapper text {
  font-style: normal;
  font-weight: 500;
  font-size: 48rpx;
  line-height: 62rpx;
}
.notice_container .notice_list_wrapper .notice_list_item {
  margin-bottom: 30rpx;
}
.notice_container .notice_list_wrapper .notice_list_item .notice_item_showCover {
  box-shadow: rgba(0, 0, 0, 0.1) 0rpx 20rpx 30rpx -6rpx, rgba(0, 0, 0, 0.05) 0rpx 8rpx 12rpx -4rpx;
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
}
.notice_container .notice_list_wrapper .notice_list_item .notice_item_showCover .notice_item_coverWrapper {
  margin-bottom: -4rpx;
}
.notice_container .notice_list_wrapper .notice_list_item .notice_item_showCover .notice_item_coverWrapper image {
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  width: 100%;
  height: 300rpx;
}
.notice_container .notice_list_wrapper .notice_list_item .notice_item_showCover .notice_item_msgWrapper {
  padding-bottom: 20rpx;
}
.notice_container .notice_list_wrapper .notice_list_item .notice_item_showCover .notice_item_msgWrapper .notice_item_title {
  padding-top: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-style: normal;
  font-weight: 500;
  font-size: 40rpx;
  line-height: 40rpx;
  color: #22262E;
  margin-bottom: 24rpx;
}
.notice_container .notice_list_wrapper .notice_list_item .notice_item_showCover .notice_item_msgWrapper .notice_item_desc,
.notice_container .notice_list_wrapper .notice_list_item .notice_item_showCover .notice_item_msgWrapper .notice_item_time {
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-style: normal;
  font-weight: 400;
  font-size: 28rpx;
  line-height: 48rpx;
  /* or 171% */
  text-align: justify;
  letter-spacing: -0.6rpx;
  color: #6F7580;
}
.notice_container .notice_list_wrapper .notice_list_item .notice_item_showText {
  box-shadow: rgba(0, 0, 0, 0.07) 0rpx 2rpx 4rpx, rgba(0, 0, 0, 0.07) 0rpx 4rpx 8rpx, rgba(0, 0, 0, 0.07) 0rpx 8rpx 8rpx, rgba(0, 0, 0, 0.05) 0rpx 8rpx 12rpx -4rpx;
  border-radius: 32rpx;
}
.notice_container .notice_list_wrapper .notice_list_item .notice_item_showText .notice_item_msgWrapper {
  padding-bottom: 20rpx;
}
.notice_container .notice_list_wrapper .notice_list_item .notice_item_showText .notice_item_msgWrapper .notice_item_title {
  padding-right: 20rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
  font-style: normal;
  font-weight: 500;
  font-size: 40rpx;
  line-height: 40rpx;
  color: #22262E;
  margin-bottom: 24rpx;
}
.notice_container .notice_list_wrapper .notice_list_item .notice_item_showText .notice_item_msgWrapper .notice_item_desc,
.notice_container .notice_list_wrapper .notice_list_item .notice_item_showText .notice_item_msgWrapper .notice_item_time {
  padding-right: 20rpx;
  padding-left: 20rpx;
  font-style: normal;
  font-weight: 400;
  font-size: 28rpx;
